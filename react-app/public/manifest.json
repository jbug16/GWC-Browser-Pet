{
    "manifest_version": 3,
    "name": "Browser Pet",
    "description": "A pet penguin to keep you on task while you study",
    "version": "1.0",
    "action": {
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "images/cat_icon_16.png",
        "32": "images/cat_icon_32.png",
        "48": "images/cat_icon_48.png",
        "128": "images/cat_icon_128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "storage"
    ]
}
